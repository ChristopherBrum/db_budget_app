<div class="container">
  <h3>Add or Deduct Funds:</h3>
  <form method="post" action="/budget/add_funds">
    <label>Amount to be added or deducted: </label>
    <input name="deposit_amount" type="float" required>
    <button class="btn" type="submit">Add/Deduct Funds</button>
  </form>
</div>

<div class="container">
  <h3>Budget History:</h3>
  <table class="table table-striped">
    <thead>
      <tr>
        <th class="table-head">Amount</th>
        <th class="table-head">Type</th>
        <th class="table-head">Date</th>
        <th class="table-head">Time</th>
      </tr>
    </thead>
    <tbody>
      <% @deposits.each do |deposit| %>
        <tr>
          <td>$<%= deposit[:amount] %></td>
          <td><%= determine_deposit_type(deposit[:amount]) %></td>
          <td><%= deposit[:date] %></td>
          <td><%= deposit[:time] %></td>  
        </tr>
      <% end %>
    </tbody>
  </table>
</div>