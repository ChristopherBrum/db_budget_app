<div class="container">
  <h3>Add or Deduct Funds:</h3>
  <form method="post" action="/deposits/add">
    <label>Amount to be added or deducted: </label>
    <input name="deposit_amount" type="float" required>
    <button class="btn" type="submit">Add/Deduct Funds</button>
  </form>
</div>

<div class="container">
  <h3>Budget History:</h3>
  <table class="table table-striped">
    <thead>
      <tr>
        <th class="table-head">Amount</th>
        <th class="table-head">Type</th>
        <th class="table-head">Date</th>
        <th class="table-head">Time</th>
      </tr>
    </thead>
    <tbody>
      <% @deposits.each do |deposit| %>
        <tr>
          <td>$<%= deposit[:amount] %></td>
          <td><%= determine_deposit_type(deposit[:amount]) %></td>
          <td><%= deposit[:date] %></td>
          <td><%= deposit[:time] %></td>  
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="container">
  <form method="post" action="/deposits/delete_history">
    <label><h3>Clear Funds History:</h3></label>
    <button class="btn delete" type="submit" onclick="return confirm('Are you sure you want to do this?')">Clear Funds History</button>
  </form>
</div>
