<html lang="en-US">
  <head>
    <title>DB Budget App</title>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/application.css">
    <meta name="viewport" content="width=device-width, initial-scale=1">
     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </head>
  <body id="bck-grd">

    <% unless session[:username] %>

      <div class="container sign-in">
        <h1>Welcome to the Budget App</h1>
        <div class="inner-sign-in">
          <form class="sign-in" method="post" action="/users/sign_up">
            <h3>Sign In</h3>
            <div class="row g-3 align-items-center">
              <div class="col-auto">
                <label class="col-form-label">Username:</label>
              </div>
              <div class="col-auto">
                <input type="text" name="username" class="form-control" required>
              </div>
            </div>
            <div class="row g-3 align-items-center">
              <div class="col-auto">
                <label class="col-form-label">Password</label>
              </div>
              <div class="col-auto">
                <input type="password" name="password" class="form-control" required>
              </div>
            </div>
            <button type="submit" class="btn">Sign In</button>
          </form>

          <form class="sign-in" method="post" action="/users/sign_up">
          <h3>Sign Up</h3>
            <div class="row g-3 align-items-center">
              <div class="col-auto">
                <label class="col-form-label">Username:</label>
              </div>
              <div class="col-auto">
                <input type="text" name="username" class="form-control" required>
              </div>
            </div>
            <div class="row g-3 align-items-center">
              <div class="col-auto">
                <label class="col-form-label">Budget Title:</label>
              </div>
              <div class="col-auto">
                <input type="text" name="budget_title" class="form-control" required>
              </div>
            </div>
            <div class="row g-3 align-items-center">
              <div class="col-auto">
                <label class="col-form-label">Password</label>
              </div>
              <div class="col-auto">
                <input type="password" name="password" class="form-control" required>
              </div>
            </div>
            <div class="row g-3 align-items-center">
              <div class="col-auto">
                <label class="col-form-label">Retype Password:</label>
              </div>
              <div class="col-auto">
                <input type="password" name="retyped_password" class="form-control" required>
              </div>
            </div>
            <button type="submit" class="btn">Sign In</button>
          </form>
        </div>
      </div>

    <% else %>

      <div class="container">
        <h1><%= @budget_name %></h2>
        <h5>Monthly Expenses: $<%= @estimated_expenses %></h5>
        <h5>Funds Deposited: $<%= @current_funds %></h5>
        <h5>Total Spent: $<%= @total_transactions %></h5>
        <h5>Funds Available: $<%= @current_balance %></h5>

        <% if @budget_balance.to_f > 0 %>
          <h3 class="bal green">Budgeted Balance: <strong>$<%= @budget_balance %></strong></h3>
        <% elsif @budget_balance.to_f < 0   %>
          <h3 class="bal red">Budgeted Balance: $<strong><%= @budget_balance %></strong></h3>
        <% else %>
          <h3 class="bal">Budgeted Balance: $<strong><%= @budget_balance %></strong></h3>
        <% end %>

        <div class="menu">
          <form method="get" action="/">
            <button class="btn" type="submit">Home</button>
          </form>
          
          <form method="get" action="/deposits">
            <button class="btn btn-nav" type="submit">Add/Deduct Funds</button>
          </form>

          <form method="get" action="/categories">
            <button class="btn btn-nav" type="submit">Add Expense Category</button>
          </form>

          <form method="get" action="/transactions">
            <button class="btn btn-nav" type="submit">Add Transaction</button>
          </form>

          <form method="post" action="/destroy">
            <button class="btn btn-nav delete" type="submit" onclick="return confirm('Are you sure you want to do this?')">Delete Budget</button>
          </form>

          <form method="post" action="/users/signout">
            <p class="user-status">
              Signed in as <%= session[:username] %>.
              <button class="btn btn-nav delete" type="submit">Sign Out</button>
            </p>
          </form>
        </div>
      </div>

      <%= yield %>

    <% end %>
    <footer>
      <p class="trademark">Â© 2018 ChristopherBrum</p>
    </footer>
  </body>
</html>
